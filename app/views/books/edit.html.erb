<h2>Editing Book</h2>
<%= form_with model:@book, local:true do |f| %>
  <p class="new-p">Title</p>
  <%= f.text_field :title %>
  <p class="new-p">Body</p>
  <%= f.text_area :body %><br>
  <%= f.submit 'Update Book' %> <br>
  <%= link_to "show", book_path(@book.id) %> |
<%= link_to("Back", "/books") %>
<% end %>