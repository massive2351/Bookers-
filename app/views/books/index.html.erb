<h1>Books</h1>
<table>
  <thead>
    <tr>
     <th>Title</th>
     <th>Body</th>
    </tr>
  </thead>
  <tbody>
   <% @books.each do |book| %>
    <tr>
      <td class="tr-td"><span><%= book.title %></span></td>
      <td class="tr-td"><span><%= book.body %></span></td>
      <td class="tr-td"><%= link_to "show", book_path(book.id) %></td>
      <td class="tr-td"><%= link_to "edit", edit_book_path(book) %></td>
      <td class="tr-td"><%= link_to "delete", book_path(book), method: :delete, "data-confirm" => "Are you sure?" %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<h2>New book</h2>
<%= form_with model:@book, local:true do |f| %>
  <p class="new-p">Title</p>
  <%= f.text_field :title %>
  <p class="new-p">Body</p>
  <%= f.text_area :body %><br>
  <%= f.submit 'Create Book' %>
<% end %>